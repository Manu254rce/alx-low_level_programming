# This is a simple Makefile

CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school

# Rule for 'all'
all: $(NAME)

# Rule for building exec
$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) -c $< -o $@

# Rule for cleaning up
clean:
	$(RM) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

