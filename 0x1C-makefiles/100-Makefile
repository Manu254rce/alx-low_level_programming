# This is a complete Makefile that deletes all temp files in Vim/Emacs
# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

# Rules
# Rule for running make

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Rule for deleting all Vim/ Emacs temporary files

clean:
	$(RM) *~ $(NAME)
	find . -type f -name '*~' -delete
	find . -type f -name '\#*\#' -delete
	find . -type f -name '$(NAME)' -delete

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
